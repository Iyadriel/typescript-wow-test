{
    "compilerOptions": {
        "target": "esnext",
        "lib": [
            "esnext"
        ],
        "moduleResolution": "node",
        "rootDir": ".",
        "typeRoots": [
            "node_modules/@wartoshika/wow-declarations",
            "./types"
        ],
        "strict": true
    },
    "tstl": {
        "luaTarget": "5.1",
        "noImplicitSelf": true,
        "luaBundleEntry": "main.ts",
        "luaBundle": "dist/bundle.lua"
    }
}